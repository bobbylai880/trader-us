# AI Trader Assist 环境配置

# ==========================================
# 数据库配置 (PostgreSQL 18)
# ==========================================
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=trader
PG_USER=trader
PG_PASSWORD=your_password_here

# ==========================================
# FRED 宏观数据 API
# ==========================================
FRED_API_KEY=your_fred_api_key_here

# ==========================================
# DeepSeek LLM 配置
# ==========================================
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_TIMEOUT=90
DEEPSEEK_MAX_TOKENS=8192

# Optional: 为特定 LLM 阶段指定不同模型
# DEEPSEEK_MODEL_MARKET_ANALYZER=
# DEEPSEEK_MODEL_SECTOR_ANALYZER=
# DEEPSEEK_MODEL_STOCK_CLASSIFIER=
# DEEPSEEK_MODEL_EXPOSURE_PLANNER=
# DEEPSEEK_MODEL_REPORT_COMPOSER=deepseek-coder

# ==========================================
# 时区配置
# ==========================================
TZ=America/Los_Angeles
